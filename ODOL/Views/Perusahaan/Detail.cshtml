@{
    ViewData["Tittle"] = "Detail Perusahaan";
}
@model ODOL.Models.Perusahaan


<div class="col panelcontent panelcontentweb" style="font-size: 14px; height:650px">
    <div class="scrollstyle">
        <nav aria-label=" breadcrumb" style="margin-left: 20px;">
            <ol class="breadcrumb" style="padding: 0; margin: 0; background-color: #FFF;">
                <li class="breadcrumb-item text-primary">
                    <b>
                        Aplikasi Absensi dan Logbook Magang Mahasiswa
                    </b>
                </li>
                <li class="breadcrumb-item active"><b>Perusahaan</b></li>
            </ol>
        </nav>
        <hr style="margin-top: .8em;" />
        <div class="jumbotron" style="box-shadow: none; height:auto; margin-left:20px; padding: 15px 30px;">
            @* taruh content disini*@
            <span class="text-center mb-1">
                <h4>
                    <b>
                        Detail Perusahaan
                    </b>
                </h4>
            </span>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group ">
                        <label for="Nama"><b>Nama Perusahaan</b></label>
                        <input type="text" class="form-control" id="Nama" value="@Model.NamaPerusahaan" disabled>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group ">
                        <label for="Email"><b>Email Perusahaan</b></label>
                        <input type="text" class="form-control" id="Email" value="@Model.EmailPerusahaan" disabled>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group ">
                        <label for="Cabang"><b>Cabang Perusahaan</b></label>
                        <input type="text" class="form-control" id="Cabang" value="@Model.Cabang" disabled>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group ">
                        <label for="Group"><b>Group</b></label>
                        <input type="text" class="form-control" id="Group" value="@Model.Group" disabled>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group ">
                        <label for="Alamat"><b>Alamat Perusahaan</b></label>
                        <textarea type="text" class="form-control" id="Alamat" disabled>@Model.AlamatPerusahaan</textarea>
                    </div>
                </div>
                
                
            </div>
            <br />
                <br />
                <br />
                <br />
            <span class="text-center mb-1">
                    <h4>
                        <b>
                            Daftar Mahasiswa Magang
                        </b>
                    </h4>
                </span>
                <hr />
                <table class="table w-100 container-fluid h-10 text-center" id="myTable">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">No</th>
                            <th scope="col" class="text-center">Nama</th>
                            <th scope="col" class="text-center">Prodi</th>
                            <th scope="col" class="text-center">Status</th>
                            <th scope="col" class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>John Doe</td>
                            <td>TI</td>
                            <td>Magang</td>
                            <td>
                                <a href="#" class="btn btn-primary btn-sm">Detail</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
        </div>
    </div>

    <hr class="my-4" />
    <p class="lead" style="font-size: 1.1rem;">
        Jika terdapat kesulitan tentang cara penggunaan aplikasi ini, silahkan menghubungi MIS.
        <br />
        <br />
    </p>
</div>
